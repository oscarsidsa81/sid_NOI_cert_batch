  <!-- Acción del informe -->
  <record id="action_report_notice_inspection"
          model="ir.actions.report">
    <field name="name">Notificaciones de inspección</field>
    <field name="model">stock.picking.batch</field>
    <field name="report_type">qweb-pdf</field>

    <!-- Debe coincidir con el t-name de la plantilla -->
    <field name="report_name">stock_picking_batch.sid_report_picking_batch_noi</field>

    <!-- Suele ponerse igual que report_name -->
    <field name="report_file">stock_picking_batch.sid_report_picking_batch_noi</field>

    <field name="paperformat_id" ref="base.paperformat_euro"/>
    <field name="print_report_name">
      (object.name or 'Notificaciones de inspección')
    </field>
    <field name="binding_model_id" ref="stock_picking_batch.model_stock_picking_batch"/>
