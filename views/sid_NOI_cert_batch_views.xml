<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sample form view -->
    <record id="view_picking_batch_form_inherit_noi_cert" model="ir.ui.view">
        <field name="name">stock.picking.batch.form.inherit.noi.cert</field>
        <field name="model">stock.picking.batch</field> <!-- ✅ modelo correcto -->
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/> <!-- ✅ heredar -->
        <field name="arch" type="xml">
            <!-- Añadir botones al header del lote -->
            <xpath expr="//header" position="inside">
                <button name="action_print_merged_report_batch"
                        type="object"
                        string="Certificados (PDF)"
                        class="oe_highlight"/>
                <button name="action_zip_certificates_batch"
                        type="object"
                        string="Certificados (ZIP)"/>
            </xpath>
        </field>
    </record>
</odoo>